<%- layout('layout/mainLayout.ejs') %>

  <div class="container bg-light  py-5 ">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10 col-sm-12 bg-light p-4 rounded shadow ">
    
        <form  method="post" action="/blogs/new/<%= currentUser %>/create" novalidate class="needs-validation">
          <div class="row">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <h4 class="text-center fw-bold pb-4">Write New Blog <i class="bi bi-pencil"></i></h4>
            <div class="mb-3 col-12">
              <!-- <label for="inputGroup-sizing-lg" class="form-label">Enter your Email address</label> -->
              <input type="text" name="blog[title]" class="form-control p-text-black " id="inputGroup-sizing-lg "
                style="height: 3rem;" placeholder="Blog Title" aria-describedby="emailHelp" required >
                <div class="invalid-feedback">Enter blog title.</div>
            </div>
            <div class="mb-3 col-12">
              <div class="form-floating">
                <textarea class="form-control p-text-black text-dark " name="blog[content]" id="floatingTextarea2"
                  placeholder="Blog content here" style="height: 100px" required ></textarea>
                <label for="floatingTextarea2">Blog content here</label>
                 <div class="invalid-feedback">Enter blog content</div>
              </div>
            </div>
            <div class="mb-3 col-12">
              <!-- <label for="inputGroup-sizing-lg" class="form-label">Enter your Email address</label> -->
              <input type="text" name="blog[url]" class="form-control p-text-black " id="inputGroup-sizing-lg "
                style="height: 3rem;" placeholder="image URL" aria-describedby="emailHelp">
                  <div class="invalid-feedback">Enter Image URL's</div>
            </div>

             <button type="submit" class="btn btn-info text-light ms-3 w-25">Submit</button>

        </form>
      </div>
    </div>
  </div>